@model IEnumerable<Gymzilla.Models.Category>

@{
    ViewData["Title"] = "Shop our Store";
}

<h1>Shop our Store</h1>

<section class="row card-group">
    @foreach (var c in Model)
            {
                <div class="col-lg-4 mb-3">
                    <div class="card mb-4">
                        <div class="card-body text-center h-100">
                            <a asp-controller="Shop" asp-action="Category" asp-route-id="@c.CategoryId">
                                @c.Name
                            </a>                   
                        </div>
                    </div>
                </div>
            }
</section>